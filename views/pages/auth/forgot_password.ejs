<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../../partials/_head'); %>
	</head>
	<body>
		<main>
			<section class="auth">
				<div class="auth-container">
					<h1>Forgot password</h1>
					<p>
						Enter your email address to receive your password reset
						link.
					</p>

					<form action="/forgot-password" method="post">
						<div class="form-group">
							<label for="email">Email Address</label>
							<input
								type="email"
								name="email"
								id="email"
								value="<% if(formData) { %><%= formData.email %><% } %>"
								autofocus
							/>

							<% if (errors) { %> <% errors.forEach((error) => {
							%> <% if (error.path == 'email') { %>
							<p class="msg-error"><%= error.msg %></p>
							<% } %> <% }) %> <% } %>
						</div>

						<div class="form-group">
							<button type="submit">
								Send password reset link
							</button>
						</div>
					</form>
				</div>
			</section>
		</main>
	</body>
</html>
